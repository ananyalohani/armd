generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id        String @id @default(cuid())
  ipAddress String @unique
  country   String
  continent String
}

model SessionEvent {
  id          String @id @default(uuid())
  type        Int
  timestamp   DateTime
  data        Json?
  session     Session  @relation(fields: [sessionId], references: [id])
  sessionId   String
}

model Session {
  id          String @id
  startTime   DateTime
  endTime     DateTime
  events      SessionEvent[]
}

enum EventType {
  DOM_CONTENT_LOADED    @map("1")
  LOAD                  @map("2")
  FULL_SNAPSHOT         @map("3")
  INCREMENTAL_SNAPSHOT  @map("4")
  META                  @map("5")
  CUSTOM                @map("6")
  PLUGIN                @map("7")
}